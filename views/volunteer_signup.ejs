<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">


        <link href="/kiva_style.css" rel="stylesheet" type="text/css">
        <meta name="description" content="">
        <meta name="author" content="">
        <script src="//code.jquery.com/jquery-1.9.1.js"></script>
        <script src="//code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

        <title>Become a Volunteer Today!</title>
    </head>

    <body>

    <div id="wrapper">
    <% include banner %>

    <div id="content">
        <div id="signup-form">
            <h1>Sign Up</h1>
            <br><br>
            <form id="signup-submit" action="/volunteer/submit-volunteer" method="POST">
                <span>First Name</span>
                    <input type="text" name="first_name" size="20" class="form-control" required><br>
                <span>Last Name</span>
                    <input type="text" name="last_name" size="20" class="form-control" required><br>
                <% if (error) { %>
                <div class="alert alert-danger alert-dismissible fade in" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <span><%= error %></span>
                </div>
                <% } %>
                <div id="username-alert" class="alert alert-danger alert-dismissible fade in" style="display:none;" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <span>This username has already been registered.</span>
                </div>
                <span>Username</span>
                    <input type="text" name="username" size="20" class="form-control" required>
                        <br>

                <div id="email-alert" class="alert alert-danger alert-dismissible fade in" style="display:none;" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <span>This email has already been registered.</span>
                </div>

                <span>Email Address</span>
                    <input type="email" name="email_address" size="20" class="form-control" required><br>
                <span>Password</span>
                    <input type="password" name="password" size="20" class="form-control" required><br>
                <span>Linkedin Profile</span>
                <input type="url" name="linked_in" size="20" class="form-control" required><br>

                <br>
                <div >
                    <label>
                        Please read and sign the volunteer agreement shown below.
                        This is required simply because the documents you will be reviewing are official business documents.
                          <iframe src="https://na2.docusign.net/member/PowerFormSigning.aspx?PowerFormId=dfc19b21-39ee-40ac-98c0-ecda07cbc268" width="1000" height="1000"></iframe>
                    </label>
                </div>
                <input type="submit" id="submit-button" class="btn btn-primary" disabled>
            </form>
        </div><br>
    </div>
    <% include footer %>
    </div>
    </body>
    <script>

        function checkboxCheck() {
            if($('#checkbox').is(":checked")) {
                $('#submit-button').removeAttr('disabled');
            } else {
                $('#submit-button').attr('disabled', 'disabled');
            }
        }
        $(document).ready(function() {
            $('.banner-btn').hide();
            $('#signup-submit').submit(function(e) {
                e.preventDefault();
                $.ajax({
                    type: "POST",
                    url: "/volunteer/check_email_username",
                    data: {username: $('[name=username]').val(), email: $('[name=email_address]').val()},
                    success: function(data) {
                        switch (data) {
                            case "neither":
                                $('form').unbind('submit').submit();
                                break;
                            case "email":
                                $('#email-alert').show();
                                $('#username-alert').hide();
                                break;
                            case "username":
                                $('#email-alert').hide();
                                $('#username-alert').show();
                                break;
                            case "both":
                                $('#email-alert').show();
                                $('#username-alert').show();
                                break;
                        }
                    }
                });
            });
        });
        </script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
</html>
