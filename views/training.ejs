	<script>
		$(document).ready(function() {
			$('#questions').hide();
			$('#notifications-btn').hide();
			if (<%= finished_training %>) {
				$('#reviewed').hide();
			} else {
				$('#home-btn').hide();
			}
			$('#reviewed').click(function() {
				$('#questions').show();
				$('#links').hide();
			});
			$('#back').click(function() {
				$('#questions').hide();
				$('#links').show();
			})
		});

	</script>

